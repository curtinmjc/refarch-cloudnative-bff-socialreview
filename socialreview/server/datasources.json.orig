{
  "review-microservice": {
    "name": "review-microservice",
    "baseURL": "https://netflix-zuul-cloudnative-dev.mybluemix.net/socialreview-microservice/micro/review",
    "crud": false,
    "connector": "rest",
    "debug": true,
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://netflix-zuul-cloudnative-dev.mybluemix.net/socialreview-microservice/micro/review",
          "headers":{
           "Authorization": ""
         },
          "options": {
            "strictSSL": false,
            "useQuerystring": true
          },
          "query": {
            "itemId": "{itemId}"
          }
        },
        "functions": {
          "list": [
            "itemId"
          ]
        }
      },
      {
        "template": {
          "method": "POST",
          "headers": {
            "Authorization": "",
            "accept": "application/json",
            "content-type": "application/json"
          },
          "options": {
            "strictSSL": false
          },
          "url": "https://netflix-zuul-cloudnative-dev.mybluemix.net/socialreview-microservice/micro/review",
          "body": {
            "comment": "{comment}",
            "itemId": "{itemId}",
            "rating": "{rating}",
            "reviewer_email": "{reviewer_email}",
            "reviewer_name": "{reviewer_name}",
            "review_date": "{review_date}"
          }
        },
        "functions": {
          "post": [
            "comment",
            "itemId",
            "rating",
            "reviewer_email",
            "reviewer_name",
            "review_date"
          ]
        }
      }
    ]
  }
}
